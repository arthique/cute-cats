{
  "manifest_version": 2,

  "name": "__MSG_app_name__",
  "short_name": "__MSG_app_short_name__",
  "description": "__MSG_app_description__",
  "version": "0.1.0",

  "default_locale": "ru",

  "permissions": [ "activeTab" ],

  "browser_action": {
    "default_icon": "cat-sleep-16.png",
    "default_title": "__MSG_browser_action__"
  },

  "icons": {
    "16": "cat-sleep-16.png",
    "48": "cat-sleep-48.png",
    "128": "cat-sleep-128.png"
  },

  "background": {
    "persistent": false,
    "page": "background.html"
  },

  "content_scripts": [
    {
      "matches": [
        "",
        ""
       ],
      "css": [ "styles/styles.css" ]
    }
  ],

  "web_accessible_resources": [ "styles/.css" ]
}
